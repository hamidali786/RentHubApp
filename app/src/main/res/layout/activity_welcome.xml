<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/rent_hub_rental_services_platform"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/ic_welcome" />

        <TextView
            android:id="@+id/link"
            android:layout_width="207dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:padding="30dp"
            android:paddingBottom="1dp"
            android:text="RENT|HUB"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:drawableTopCompat="@drawable/ic_splash_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:paddingStart="0dp"
            android:text="Welcome To Rent|HUB"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingStart="0dp"
            android:text="All Right Reserve Copy Right @2021"
            android:textColor="#100000"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</RelativeLayout>